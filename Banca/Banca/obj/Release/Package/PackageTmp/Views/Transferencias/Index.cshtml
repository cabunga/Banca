@model Banca.Models.Transferencia

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>   
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        @using (Html.BeginForm("administrar", "Transferencias", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()


            <h4>Cliente </h4>
              
            
                    <div class="form-group form-group-lg">
                        @Html.LabelFor(model => Model.ClienteOrigen, new { @value = "Cuenta Origen", @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => Model.ClienteOrigen.NumeroCuenta, new { @Value = (Model == null) ? "111111" : Model.ClienteOrigen.NumeroCuenta, type = "text", @class = "form-control", @id = "idCuentaOrigen" })
                        </div>
                    </div>
                    <div class="form-group form-group-lg">
                        @Html.LabelFor(model => Model.ClienteOrigen.Saldo, new { @value = "Saldo", @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.ClienteOrigen.Saldo, new { type = "text", @class = "form-control", @id = "idSaldoCO" })
                        </div>
                    </div>
                    <div class="form-group form-group-lg">
                        @Html.LabelFor(model => Model.ClienteDestino, new { @value = "Cuenta Destino", @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => Model.ClienteDestino.NumeroCuenta, new { type = "text", @class = "form-control", @id = "idCuentaDestino" })
                        </div>
            </div>
            <div class="form-group form-group-lg">
                @Html.LabelFor(model => Model.Valor, new { @value = "Valor Transferir", @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Valor, new { type = "text", @class = "form-control", @id = "idSaldoTransferir" })
                </div>
            </div>

                

                <div class="form-group form-group-lg">
                    <div class="col-sm-10">
                        <button id="idTransferir" class="btn btn-primary" type="submit">Transferir</button>
                    </div>
                </div>
            if (Model != null)
            {
                if (Model.estadoTransaccion == true)
                {
                    @Html.Label("Transferencia exitosa", new { id = "MensajeRespuesta" })
                }
                if (Model.ClienteDestino != null)
                {
                    if (Model.estadoTransaccion == false)
                    {
                        @Html.Label("Transferencia No exitosa", new { id = "MensajeRespuesta" })
                    }
                }
            }
        }
    </div>
    </body>

</html>
