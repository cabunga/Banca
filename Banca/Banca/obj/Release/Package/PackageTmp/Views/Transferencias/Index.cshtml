@model Banca.Models.Transferencia

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-1.9.0.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Scripts/Transferencia.js">
    </script>
    <script type="text/javascript">
    var urlTransferencia = '@Url.Action("administrar", "Transferencias")';
    </script>
</head>
<body>
    
    @using (Html.BeginForm("administrar","Transferencias",FormMethod.Post,new { @class="form-inline"}))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Cliente</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <dt>
                    @Html.LabelFor(model => Model.ClienteOrigen.NumeroCuenta, "Numero cuenta Origen")
                </dt>
                <dt>
                    @Html.TextBoxFor(model => Model.ClienteOrigen.NumeroCuenta, new { @Value = (Model==null)?"111111":Model.ClienteOrigen.NumeroCuenta, type = "text", @class = "form-control", @id = "idCuentaOrigen" })

                </dt>
                <dt>
                    @Html.LabelFor(model => Model.ClienteOrigen.Saldo, "Saldo")
                </dt>
                <dt>
                    @Html.TextBoxFor(model => model.ClienteOrigen.Saldo, new { type = "text", @class = "form-control", @id = "idSaldoCO" })

                </dt>
                <dt>
                    @Html.LabelFor(model => Model.ClienteDestino.NumeroCuenta, "Numero cuenta Destino")
                </dt>
                <dt>
                    @Html.TextBoxFor(model => Model.ClienteDestino.NumeroCuenta, new { type = "text", @class = "form-control", @id = "idCuentaDestino" })

                </dt>
                <dt>
                    @Html.LabelFor(model => Model.Valor, "Valor Transferir")
                </dt>
                <dt>
                    @Html.TextBoxFor(model => model.Valor, new { type = "text", @class = "form-control", @id = "idSaldoTransferir" })

                </dt>
            </div>
        </div>
        <p>
            <button id="idTransferir" type="submit">Transferir</button>
        </p>
    }
</body>
</html>
