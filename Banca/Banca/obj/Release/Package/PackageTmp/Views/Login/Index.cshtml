@model Banca.Models.Cliente

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<link href="~/Content/bootstrap.css" rel="stylesheet"/>

<body>
    <div class="container">
        @using (Html.BeginForm("Autenticarse", "Login", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            
                <h4>Usuario</h4>

                <div class="form-group form-group-lg">
                    @Html.LabelFor(model => Model.username, new { @value = "Nombre de Usuario", @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => Model.username, new { type = "text", @class = "form-control", @id = "idUsuario" })
                    </div>
                </div>

                <div class="form-group form-group-lg">
                    @Html.LabelFor(model => Model.password, new { @value = "Password", @class = "col-sm-2 control-label" })
                    <div class="col-sm-10">
                        @Html.TextBoxFor(model => model.password, new { type = "password", @class = "form-control", @id = "idPassword" })
                    </div>
                    
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">

                        <button id="idLoguearse" class="btn btn-primary" type="submit">Login</button>
                    </div>
</div>
                    }
                </div>

</body>
</html>
 